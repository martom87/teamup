<h1><strong><%= @event.title %></strong></h1>

<p>
  <strong>Sport:</strong>
  <%= @event.sport.name %>
</p>

<p>
  <strong>Capacity:</strong>
  <%= @event.capacity %>
</p>
<p>
  <strong>Start:</strong>
  <%= @event.started_at %>
</p>

<strong>Contact:</strong>
<%= @event.ended_at %>
</p>

<strong>Description:</strong>
<%= @event.description %>
</p>


<p><%= link_to "Back", events_path, class: "btn btn-success" %></p>
<p><%= link_to "Edit", edit_event_path(@event), class: "btn btn-xs btn-primary" %></p>

<p> <%= link_to "Delete ", event_path(@event), method: :delete,
                data: {confirm: "Are you sure you want to delete this event?"},
                class: "btn btn-xs btn-danger" %> </p>

<% if @event.users.find_by(id: current_user) %>
  <%= link_to 'Leave', leave_event_path(@event), method: :delete %>
<% else %>
  <%= link_to 'Join', join_event_path(@event) %>
<% end %>

<table>
  <th> Attendees</th>
<% @event.users.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <td><%= image_tag user.avatar_url :thumb, alt: 'Avatar' if user.avatar_url %></td>
  </tr>
<% end %>
<table>

