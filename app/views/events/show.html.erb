<h1><strong><%= @event.title %></strong></h1>

<p>
  <strong>Capacity:</strong>
  <%= @event.capacity %>
</p>
<p>
  <strong>Start:</strong>
  <%= @event.started_at %>
</p>

<strong>Contact:</strong>
<%= @event.ended_at %>
</p>

<strong>Description:</strong>
<%= @event.description %>
</p>


<p><%= link_to "My Events", events_path, class: "btn btn-success" %></p>
<p><%= link_to "Edit", edit_event_path(@event), class: "btn btn-xs btn-primary" %></p>

<p> <%= link_to "Delete ", event_path(@event), method: :delete,
                data: {confirm: "Are you sure you want to delete this event?"},
                class: "btn btn-xs btn-danger" %> </p>









