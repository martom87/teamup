<h1>Events</h1>

<%= form_for_filterrific @filterrific do |f| %>
  <div>
    Search
    <%= f.text_field(
      :search_query,
      class: 'filterrific-periodically-observed'
    ) %>
  </div>
  <div>
    Sport
    <%= f.select(
      :with_sport_id,
      @filterrific.select_options[:with_sport_id],
      { include_blank: 'Any ' }
    ) %>
  </div>
  <div>
    <%= link_to(
      'Reset filters',
      reset_filterrific_url,
    ) %>
  </div>
  <%= render_filterrific_spinner %>
<% end %>

<%= render(
  partial: 'events/list',
  locals: { events: @events }
) %>
