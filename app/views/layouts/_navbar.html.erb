<div class="container-menu">
      <div class="logo">
        <%= link_to events_path do %>
        <%=image_tag('logo-small.png')%>
        <% end %>
        </div>
        <div class="nav">
        <ul>
            <li class="create-event">
              <%= link_to 'Create new event', new_event_path if policy(Event).create? %>
            </li>
            <% if user_signed_in? %>
            <li class="item">
              <%= link_to 'Log Out', destroy_user_session_path, method: :delete %>
            </li>
            <li class="item">
              <%= link_to 'Edit Profile', edit_user_registration_path %>
            </li>
            <li class="item">
              <%= cl_image_tag current_user.avatar_url :thumb, default_image: "thumb_avatar.jpg" if current_user.avatar_url %>
            </li>
          <% else %>
          <li class="item">
            <%= link_to 'Log In', new_user_session_path %>
          </li>
          <li class="item">
            <%= link_to 'Register', new_user_registration_path %> <br>
          </li>
          <% end %>
        </ul>
      </div>
</div>

<div class="container-header">
  <div class="row">
    <div class="col-12">
      <h1 class="app-title">Get ready to TeamUp</h1>
      <p>Meet great players</p>
      </div>
    </div>
  </div>
</div>
