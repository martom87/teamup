<table>
<th>COMMENTS</th>
<% @event.comments.each do |comment| %>
  <tr>
    <td>
    <%= link_to user_path(comment.user) do %>
    <%= image_tag comment.user.avatar_url :thumb, alt: 'Avatar' if current_user.avatar_url %>
    <% end %>
    </td>
    <td class="commenter"><%= comment.user.username %>: </td>
    <td><%= comment.body %></td>
  </tr>
<% end %>
</table>
